    "lib": ["ES2022", "dom"],
    "target": "ES2022",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],
    // shadcn config
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
